{
  "name": "paper-summarizer-extension",
  "version": "1.0.0",
  "description": "AI-powered Chrome extension for academic paper summarization",
  "scripts": {
    "build": "webpack --mode=production",
    "dev": "webpack --mode=development --watch",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "format": "prettier --write src/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "keywords": [
    "chrome-extension",
    "ai",
    "papers",
    "summarization",
    "research"
  ],
  "author": "Your Name",
  "license": "MIT",
  "devDependencies": {
    "webpack": "^5.88.0",
    "webpack-cli": "^5.1.0",
    "copy-webpack-plugin": "^11.0.0",
    "eslint": "^8.44.0",
    "prettier": "^3.0.0",
    "typescript": "^5.0.0",
    "ts-loader": "^9.4.0",
    "@types/chrome": "^0.0.246",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0"
  },
  "dependencies": {
    "openai": "^4.0.0",
    "pdfjs-dist": "^4.0.379"
  }
}